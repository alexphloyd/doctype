{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 96,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "<THIRD_PARTY_MODULES>",
        "^~/app/(.*)$",
        "^~/pages/(.*)$",
        "^~/widgets/(.*)$",
        "^~/features/(.*)$",
        "^~/entities/(.*)$",
        "^~/shared/(.*)$",
        "^[./]"
    ],
    "importOrderSeparation": true
}
